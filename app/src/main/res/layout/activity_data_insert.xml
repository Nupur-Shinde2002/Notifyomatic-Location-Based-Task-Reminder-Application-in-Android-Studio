<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#164597"
    tools:context=".DataInsertActivity">

    <RelativeLayout
        android:id="@+id/kk"
        android:layout_width="362dp"
        android:layout_height="512dp"
        android:layout_margin="30dp"
        android:background="@drawable/hitashri_shades"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageViewtodo"
            android:layout_width="138dp"
            android:layout_height="122dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_gravity="top"
            android:layout_marginStart="119dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="114dp"
            android:transitionName="logo_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.556"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.266"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/todo_geo" />

        <EditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewtodo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Work Title"
            android:inputType="textMultiLine"

            android:minHeight="48dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/desp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.879" />

        <EditText
            android:id="@+id/desp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_alignEnd="@+id/title"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="3dp"

            android:ems="10"
            android:hint="Location :-  Bibewadi \nDate :- 20-12-2022\nTime :- 10:23 AM/PM\nEnter the Detailed Description of your work"
            android:inputType="textMultiLine"


            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/title" />


        <Button
            android:id="@+id/add"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desp"
            android:layout_alignStart="@+id/desp"
            android:layout_alignEnd="@+id/desp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="57dp"
            android:background="#1C68DA"
            android:text="Submit"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/desp"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="@+id/desp"
            app:layout_constraintTop_toBottomOf="@+id/desp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>